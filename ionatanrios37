<script>
start.onclick=()=>{
    start.style.display="none";
    scene.style.display="block";
    music.play();
}

function showQuestion(){
    question.style.display="block";
}

function yes(){
    heart.style.opacity=0;
    setTimeout(()=>heart.style.display="none",1000);
    tree.style.display="block";
    message.style.display="block";
    explore.style.display="inline-block";

    for(let i=0;i<30;i++){
        setTimeout(()=>leaf(),i*200);
    }
}

function explore(){
    final.style.display="block";
}

function leaf(){
    let l=document.createElement("div");
    l.className="leaf";
    l.innerText="ü§ç";
    l.style.left=Math.random()*innerWidth+"px";
    l.style.top="65%";
    document.body.appendChild(l);
    setTimeout(()=>l.remove(),6000);
}

function flower(){
    let f=document.createElement("div");
    f.className="fall";
    f.innerText=["üåπ","üå∏","üå∑","üåª"][Math.floor(Math.random()*4)];
    f.style.left=Math.random()*innerWidth+"px";
    f.style.fontSize="28px";
    document.body.appendChild(f);
    setTimeout(()=>f.remove(),6000);
}

document.body.onclick=()=>flower();
</script>

